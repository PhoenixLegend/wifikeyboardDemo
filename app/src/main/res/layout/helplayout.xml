<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <TextView
        android:text="This about how to use this app."
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHelping"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

    <TextView
        android:text="First install?"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textViewHelping"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Hit the button and select setting input method, choose the wifikeboard IMP."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="17dp"
        android:id="@+id/textView3"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Go back to the button and choose wifikeyboard IMP."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="24dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Else if"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="34dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Hit the button and connect to wifi via  the ip address displayed in the widget."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:text="Enjoy typing."
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="61dp"
        android:id="@+id/textView7" />

</RelativeLayout>